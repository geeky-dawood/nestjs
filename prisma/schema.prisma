generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  google_id     String?    @unique
  apple_id      String?    @unique
  facebook_id   String?    @unique
  first_name    String?
  last_name     String?
  password      String
  refresh_token String?
  image_url     String?
  is_verified   Boolean    @default(false)
  is_deleted    Boolean    @default(false)
  address       address[]
  bookmarks     bookmark[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("users")
}

model address {
  id        String   @id @default(cuid())
  address   String
  city      String
  state     String
  country   String
  zipcode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?  @unique
}

model bookmark {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?

  @@map("bookmarks")
}

model otp {
  id        String   @id @default(cuid())
  otp       String
  email     String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
